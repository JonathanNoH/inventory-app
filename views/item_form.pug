extends layout 

block content 
  h1= title 

  form(method='POST' action='')
    .form-container
      .input-group 
        label(for='name') Name: 
        input#name(type='text' placeholder='Name of item' name='name' required='true' value=(item===undefined ? '' : item.name))
      .input-group 
        label(for='description') Item Description: 
        input#description(type='text' placeholder='Description of item' name='description' required='true' value=(item===undefined ? '' : item.description))
      .input-group 
        label(for='price') Price: 
        input#price(type='number' placeholder='29.99' step='0.01' name='price' required='true' value=(item===undefined ? '0' : item.price))
      .input-group 
        label(for='numberInStock') Number in Stock: 
        input#numberInStock(type='number' placeholder='1' name='numberInStock' value=(item===undefined ? '0' : item.numberInStock))
      .input-group 
        label Category: 
        div 
          for category in categories 
            div 
              input.radio-input(type='radio' name='category', id=category._id value=category._id)
              label(for=category._id) #{category.name}
    button(type="submit") Submit
  if errors 
    ul 
      for error in errors 
        li!= error.msg
