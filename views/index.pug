extends layout

block content
  h1= title
  p Welcome to the #{title}, a basic inventory management site for a store based on lttstore.com 

  if error 
    p Error fetching inventory.
  else 
    ul 
      li
        a(href='inventory/items') View all !{data.item_count} items
      li 
        a(href="inventory/categories") View all !{data.category_count} categories 
