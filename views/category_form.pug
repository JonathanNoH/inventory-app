extends layout 

block content 
  h1 #{title}

  form(method='POST' action='')
    div.form-container 
      label(for='name') Category: 
      input#name(type='text', placeholder='Clothes, Gear, etc.' name='name' value=(undefined===category ? '' : category.name))
    button(type="submit") Submit 
  
  if errors 
    ul 
      for error in errors 
        li!= error.msg